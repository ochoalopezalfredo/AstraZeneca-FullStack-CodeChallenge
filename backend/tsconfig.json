{
    "compilerOptions": {
        "baseUrl": "./",
        "rootDirs": [
            "src"
        ],
        "outDir": "dist",
        "lib": [
            "es2020",
            "DOM"
        ],
        "target": "es2020",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "types": [
            "node"
        ],
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}